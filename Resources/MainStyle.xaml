            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>

                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Backgrounds\Background_Button.png"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="Menu" >
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="25 0"/>

        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Page Elements\Button_SideMenu.png"/>
            </Setter.Value>
        </Setter>
