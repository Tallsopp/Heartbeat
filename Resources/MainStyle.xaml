        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="breakfastIcon">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Icons\Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="lunchIcon">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Icons\Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="dinnerIcon">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Icons\Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="snacksIcon">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Icons\Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="waterIcon">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="75"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Buttons\Icons\Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--The template for the button that displays the calendar.-->
    <Style x:Key="DropDownButtonStyle"
       TargetType="Button">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Content" Value="TODAY"/>
        <Setter Property="Foreground" Value="#f48115"/>

        <Setter Property="Background">
            <Setter.Value>
            <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp\Assets\Backgrounds\Background_Button.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Border>
                        <Grid x:Name="PART_Root" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="PART_Button" Grid.Column="1" Grid.Row="0" Focusable="False" HorizontalAlignment="Center" VerticalAlignment="Center"            
                    Style="{StaticResource DropDownButtonStyle}"/>
                            <Grid x:Name="PART_DisabledVisual" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" IsHitTestVisible="False" Opacity="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Popup x:Name="PART_Popup" AllowsTransparency="True" Placement="Center"
                     PlacementTarget="{Binding ElementName=PART_TextBox}"
                     StaysOpen="False" />
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Home" TargetType="Button">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp/Assets/Buttons/Icons/Icon_Home_Selected.png" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Diary" TargetType="Button">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="C:\Users\NTI\source\repos\HeartbeatApp\HeartbeatApp/Assets/Buttons/Icons/Icon_Diary_Selected.png" />
            </Setter.Value>
